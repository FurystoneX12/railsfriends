

<h2>Your friend's Info:</h2>

<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    @<%= @friend.twitter %>  |
    <%= @friend.phone %>    |
    <%= @friend.gender %>   |
    <%= @friend.birthday %>
  </p>

  <hr class="my-4">

  
  <%= link_to 'Edit', edit_friend_path(@friend), class:"link" %> |
  <%= link_to 'Back', friends_path, class:"link" %>

  
</div>
