      <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td>@<%= friend.twitter %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.gender %></td>
          <td>
            <%= friend.birthmonth %>
            <%= friend.birthday %>
            <%= friend.birthyear %>
          </td>
          <td><%= friend.user_id %></td>
          <td><%= link_to 'Destroy', friend, class:"link", method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
