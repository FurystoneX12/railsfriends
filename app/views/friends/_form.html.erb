  </div>

  <div class="mb-3">

    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
    <% form.label :last_name %>
  </div>

  <div class="mb-3">
    
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number" %>
    <% form.label :phone %>
  </div>

  <div class="mb-3">
    
    <%= form.text_field :gender, class:"form-control", placeholder:"Gender" %>
    <% form.label :gender %>
  </div>
  <div class="mb-3">
    <div class="input-group flex-nowrap">
      <span class="input-group-text" id="addon-wrapping">@</span>
      <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter" %>
      <% form.label :twitter %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.text_field :birthday, class:"form-control", placeholder:"Birthmonth" %>
    <% form.label :birthmonth %>
  </div>

  <div class="mb-3">
    
    <%= form.text_field :birthday, class:"form-control", placeholder:"Birthday" %>
    <% form.label :birthday %>
  </div>

  <div class="mb-3">
    
    <%= form.number_field :birthday, class:"form-control", placeholder:"Birthyear" %>
    <% form.label :birthyear %>
  </div>

  <div class="mb-3">
    
    <%= form.number_field :user_id,id: :friend_user_id, class:"form-control", type: :hidden, value: current_user.id %>
